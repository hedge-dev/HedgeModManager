<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cb="using:HedgeModManager.UI.Controls.Basic"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="40" d:DesignHeight="1"
             x:Class="HedgeModManager.UI.Controls.Basic.Separator"
             Height="1">
  <Grid ColumnDefinitions="*,*,*">
    <Border Grid.Column="{Binding ViewModel.ColumnStart, RelativeSource={RelativeSource AncestorType=cb:Separator}}" 
            Grid.ColumnSpan="{Binding ViewModel.ColumnLength, RelativeSource={RelativeSource AncestorType=cb:Separator}}"
            Height="{Binding Height, RelativeSource={RelativeSource AncestorType=cb:Separator}}" HorizontalAlignment="Stretch" Background="{Binding Foreground, RelativeSource={RelativeSource AncestorType=cb:Separator}}" />
  </Grid>
</UserControl>

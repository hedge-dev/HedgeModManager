<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cb="using:HedgeModManager.UI.Controls.Basic"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="40" d:DesignHeight="1"
             x:Class="HedgeModManager.UI.Controls.Basic.Separator">
  <Grid ColumnDefinitions="*,*,*">
    <Border Grid.Column="1" Height="1" HorizontalAlignment="Stretch" Background="{Binding Foreground, RelativeSource={RelativeSource AncestorType=cb:Separator}}" />
  </Grid>
</UserControl>
